<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/color3"
    tools:context="com.essam.microprocess.dressamdaher.Fragment.addExam">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layoutDirection="rtl"
        android:padding="10dp"
        android:background="@drawable/styling_of_view"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_choosen_questions"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choosenQuestion"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:fontFamily="@font/cairo"
        android:layout_marginStart="5dp"
        />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/recycler_background"
        android:layout_margin="10dp"
        android:elevation="8dp"
        >

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question"
            android:fontFamily="@font/cairo"
            />
        <TextView
            android:id="@+id/questionssize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/cairo"
            android:layout_marginStart="2dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layoutDirection="rtl"
        android:padding="10dp"
        android:background="@drawable/styling_of_view"
        android:layout_marginStart="5dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_clock"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/examTime"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="@font/cairo"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/styling_of_view"
        android:orientation="vertical"
        android:elevation="8dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="@string/s_m_h"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:fontFamily="@font/cairo"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <EditText
                android:id="@+id/et_hour"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/recycler_background"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:textSize="18sp"
                android:text=":"
                android:textColor="@android:color/black"


                />

            <EditText
                android:id="@+id/et_minute"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/recycler_background"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:inputType="number"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:textSize="18sp"
                android:text=":"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"

                />
            <EditText
                android:id="@+id/et_second"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/recycler_background"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:inputType="number"
                />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layoutDirection="rtl"
        android:padding="10dp"
        android:background="@drawable/styling_of_view"
        android:layout_marginStart="5dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_answersicons"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DegreeDistribution"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:fontFamily="@font/cairo"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/styling_of_view"
        android:orientation="vertical"
        android:elevation="8dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layoutDirection="rtl"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - لكل سؤال "
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/cairo"
                android:layout_marginStart="20dp"
                />
            <EditText
                android:id="@+id/et_degree"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/recycler_background"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:inputType="number"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" درجات . "
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/cairo"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layoutDirection="rtl"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - عدد الأسئلة العشوائية "
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/cairo"
                android:layout_marginStart="20dp"
                />
            <EditText
                android:id="@+id/et_random_number_question"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/recycler_background"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:inputType="number"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layoutDirection="rtl"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - الدرجة النهائية "
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:fontFamily="@font/cairo"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/Final_Degree"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:textColor="@color/color2"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:text="0"
                android:textSize="17sp"
                />

        </LinearLayout>



    </LinearLayout>

    <Button
        android:text="@string/addExam"
        android:padding="15sp"
        android:elevation="8dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/button_background3"
        android:fontFamily="@font/cairo"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
</LinearLayout>



</android.support.v4.widget.NestedScrollView>


